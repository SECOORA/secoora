# Get Miniconda.
wget http://repo.continuum.io/miniconda/Miniconda-2.2.2-Linux-x86_64.sh -O miniconda.sh

# Add Miniconda to path.
export PATH=/$HOME/anaconda/bin:$PATH

# Create a virtual env.
conda create --yes -n rsignell python=2.7

# Activate the virtual env.
source activate rsignell

# Install Rich bundle.
conda install -c rsignell iris=1.6.2_RPS

# Install some dependencies not in the bundle.
conda install ipython pyzmq jinja2 tornado pandas pip

# These last two are not available in conda (PyPI or binstar).
conda install -c https://conda.binstar.org/rsignell pyoos
conda install -c https://conda.binstar.org/rsignell owslib
